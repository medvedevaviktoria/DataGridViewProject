@using DataGridViewProject.Entities.Models
@model IndexViewModel

@{
    ViewData["Title"] = "Склад гвоздей";
}

<h1 class="mb-4">Склад продуктов</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Добавить продукт</a>
    <form asp-action="Index" method="get">
        <button type="submit" class="btn btn-outline-secondary">Обновить</button>
    </form>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Наименование</th>
            <th>Размер</th>
            <th>Материал</th>
            <th>Количество</th>
            <th>Мин. количество</th>
            <th>Цена без НДС</th>
            <th>Общая стоимость</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ProductSize</td>
                <td>@product.Material</td>
                <td>@product.Quantity</td>
                <td>@product.MinQuantity</td>
                <td>@product.PriceWithoutTax ₽</td>
                <td>@(product.PriceWithoutTax* product.Quantity) ₽</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary">Изменить</a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-outline-danger">Удалить</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="card mt-3">
    <div class="card-body d-flex gap-4">
        <div>
            <strong>Количество товаров:</strong>
            <span>@Model.Statistics.ProductCount</span>
        </div>
        <div>
            <strong>Сумма (без НДС):</strong>
            <span>@Model.Statistics.TotalWithoutTax ₽</span>
        </div>
        <div>
            <strong>Сумма (с НДС):</strong>
            <span>@Model.Statistics.TotalWithTax ₽</span>
        </div>
    </div>
</div>