@using DataGridViewProject.Entities.Models
@model ProductModel

@{
    ViewData["Title"] = "Изменить продукт";
}

<h1>Изменить продукт</h1>

<form asp-action="Edit" method="post">
    @* скрытое поле Id *@
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProductSize" class="form-label"></label>
        <input asp-for="ProductSize" class="form-control" />
        <span asp-validation-for="ProductSize" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Material" class="form-label"></label>
        <select asp-for="Material"
                asp-items="Html.GetEnumSelectList<Material>()"
                class="form-select"></select>
        <span asp-validation-for="Material" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MinQuantity" class="form-label"></label>
        <input asp-for="MinQuantity" class="form-control" />
        <span asp-validation-for="MinQuantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PriceWithoutTax" class="form-label"></label>
        <input asp-for="PriceWithoutTax" class="form-control" />
        <span asp-validation-for="PriceWithoutTax" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
